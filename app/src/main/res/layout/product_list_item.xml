<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/productListItemTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"
        android:text="Волонтерські шкарпетки жовті, з принтом “ракета”"
        android:textColor="@color/uvs_darkgray"
        android:textSize="16sp"
        android:paddingBottom="12dp"
        android:background="@drawable/product_title_border"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/productListItemPhoto"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:layout_marginTop="11dp"
        android:text="за підтримки"
        android:textColor="@color/uvs_darkgray"
        android:textSize="10sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productListItemTitle" />

    <TextView
        android:id="@+id/productListItemGiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:layout_marginTop="1dp"
        android:text="Kyivstar"
        android:textColor="@color/uvs_darkgray"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <ImageView
        android:id="@+id/productListItemPhoto"
        android:layout_width="64dp"
        android:layout_height="52dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:padding="2dp"
        android:background="@drawable/product_photo_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_nogap" />

    <TextView
        android:id="@+id/productListItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="3dp"
        android:text="500"
        android:textColor="@color/uvs_darkgray"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintLeft_toLeftOf="@+id/productListItemPhoto"
        app:layout_constraintRight_toRightOf="@+id/productListItemPhoto"
        app:layout_constraintTop_toBottomOf="@+id/productListItemPhoto" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/transparent"
        android:text="балів"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintLeft_toLeftOf="@+id/productListItemPrice"
        app:layout_constraintRight_toRightOf="@+id/productListItemPrice"
        app:layout_constraintTop_toBottomOf="@+id/productListItemPrice"
        app:layout_constraintVertical_bias="0.0" />




</android.support.constraint.ConstraintLayout>