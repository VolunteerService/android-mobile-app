<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="45dp"
    android:layout_marginTop="45dp"
    tools:context="com.alexandergor.uvapp.MissionApplyButton">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/missionApplyText"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="8dp"
        android:text="@string/hello_blank_fragment"
        android:textColor="#272727"
        android:textSize="16sp"
        tools:text="Долучися до місії, зроби світ кращим!" />

    <Button
        android:id="@+id/missionApplyButton"
        android:layout_width="126dp"
        android:layout_height="49dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="13dp"
        android:background="@color/colorPrimary"
        android:elevation="0dp"
        android:shadowColor="#29000000"
        android:shadowDx="2"
        android:shadowDy="3"
        android:shadowRadius="2"
        android:text="@string/apply_btn_caption"
        android:textAllCaps="false"
        android:textColor="#272727"
        android:textSize="16sp" />

</RelativeLayout>
