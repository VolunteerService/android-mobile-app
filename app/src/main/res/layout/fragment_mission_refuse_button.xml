<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="25dp"
    android:layout_marginTop="25dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:padding="14dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="@drawable/mission_apply_action_bg"
    tools:context="com.alexandergor.uvapp.MissionRefuseButton">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/missionRefuseText"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="3dp"
        android:text="Ви відправили заявку на участь "
        android:textColor="#272727"
        android:textSize="16sp" />

    <Button
        android:id="@+id/missionRefuseButton"
        android:layout_width="107dp"
        android:layout_height="49dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:elevation="2dp"
        android:shadowColor="#29000000"
        android:text="@string/refuse_btn_caption"
        android:textAllCaps="false"
        android:textColor="#272727"
        android:textSize="16sp" />

</RelativeLayout>
